@model IEnumerable<FreshAir.Models.ChatHistory>
@{
        ViewData["Title"] = "Chat With Attendees";
        Layout = "~/Views/Shared/_Layout2.cshtml";
    }

<h1>Chat With Event Attendees</h1>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="hidden" value="@ViewBag.UserName" id="userInput">@ViewBag.UserName</div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div>
        <input type="hidden" value="@ViewBag.EventId" id="eventId">
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul>Archived Messages</ul>
        @foreach (var item in @ViewBag.Chat)
        {
            <ul>&#8226; @item.Message</ul>
        }
        <ul>Current Chat</ul>
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

