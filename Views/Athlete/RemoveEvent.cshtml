@model FreshAir.Models.Event

@{
    ViewData["Title"] = "Remove Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Remove Event</h1>

<h3>Are you sure you want to cancel this event?</h3>
<div>
    <div class="card" style="width: 25rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.Activity - @Model.LocationsName</h5>
            <h6 class="card-subtitle mb-2 text-muted">Scheduled Time: @Model.ScheduledTIme</h6>
            <p class="card-text">
                <div>Event Info: @Model.Description</div>

                <div>Skill Level: @Model.SkillLevel</div>

                <div>Athletic Ability: @Model.AthleticAbility</div>

                <div>Number of Attendees: @Model.AttendanceCount</div>

                <div>Accessibliity: @Model.AthleticAbility</div>
            </p>
        </div>
    </div>

    <form asp-action="RemoveEvent">
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"class="btn btn-danger">Back to List</a>
    </form>
</div>
