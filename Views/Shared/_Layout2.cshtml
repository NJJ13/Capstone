<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreshAir</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-Flatly.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <style>
        body {
            background: #F0E68C;
        }
    </style>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" asp-action="AboutFreshAir">FreshAir</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index">
                            Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About Us</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Following</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="FollowedAthletes">Athletes You Follow</a>
                            <a class="dropdown-item" asp-action="AthletesFollowingYou">Athletes Following You</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Locations</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="ViewNearLocations">View Near Locations</a>
                            <a class="dropdown-item" asp-action="GoCreateNewLocation">Create New Location</a>

                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Events</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="ViewNearEvents">Events in Your Area</a>
                            <a class="dropdown-item" asp-action="SuggestedEvents">Events for You</a>
                            <a class="dropdown-item" asp-action="HostedEvents">Events You're Hosting</a>
                            <a class="dropdown-item" asp-action="EventsAttending">Events You're Attending</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="nav-link btn btn-link">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - FreshAir - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>